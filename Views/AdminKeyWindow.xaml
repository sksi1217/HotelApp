<Window x:Class="HotelApp.Views.AdminKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="450" Width="400">
    <!-- Тень вокруг окна -->
    <Window.Effect>
        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
    </Window.Effect>

    <Border CornerRadius="10">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF222222" Offset="0" />
                    <GradientStop Color="#FF1E1E1E" Offset="0.5" />
                    <GradientStop Color="#FF1A1A1A" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Основной контент формы -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Grid.Row="1">

                <!-- Логотип или заголовок -->
                <TextBlock Text="&#xf1ad;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#0078D7" Margin="0,0,0,20" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <!-- Поле логина -->
                <Label Content="Логин" HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                <TextBox x:Name="LoginTextBox" Width="280" Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

                <!-- Поле пароля -->
                <Label Content="Пароль" HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                <PasswordBox x:Name="PasswordTextBox" Width="280" Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

                <!-- Поле Ключа -->
                <Label Content="Ключ" HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                <PasswordBox x:Name="KeyTextBox" Width="280" Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

                <!-- Кнопка входа -->
                <Button Content="Войти" Width="280" Height="35" Background="#0078D7" Foreground="White" 
                    FontSize="14" FontWeight="Bold" Click="ConfirmButton_Click" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
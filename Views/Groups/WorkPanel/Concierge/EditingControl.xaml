<UserControl x:Class="HotelApp.Views.Groups.WorkPanel.Concierge.EditingControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Width="500" Height="200">

    <!-- Тень вокруг окна -->
    <UserControl.Effect>
        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
    </UserControl.Effect>

    <Border CornerRadius="10">
        <Grid>
            <!-- Разделение на строки -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="*"/>
                <!-- Список комнат -->
                <RowDefinition Height="Auto"/>
                <!-- Canvas для модального окна -->
            </Grid.RowDefinitions>

            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF222222" Offset="0" />
                    <GradientStop Color="#FF1E1E1E" Offset="0.5" />
                    <GradientStop Color="#FF1A1A1A" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Заголовок и кнопка закрытия -->
            <Grid Grid.Row="0" Background="Black" Height="30" VerticalAlignment="Top" MouseDown="DragWindow_MouseDown">
                <TextBlock Text="Редактированиe" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0" Foreground="White" FontSize="16"/>
                <Button Content="X" Width="30" Height="30" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        FontSize="14"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Основной контент -->
            <Grid Grid.Row="1" Margin="20" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Статус бронирования -->
                <Label Grid.Row="7" Grid.Column="0" Content="Статус бронирования:" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <ComboBox Name="PaymentMethodComboBox" Grid.Row="7" Grid.Column="1" Width="200" SelectedIndex="0">
                    <ComboBoxItem Content="Подтверждённый" Tag="1"/>
                    <ComboBoxItem Content="Ожидаемый" Tag="2"/>
                    <ComboBoxItem Content="Отменённый" Tag="3"/>
                    <ComboBoxItem Content="Завершённый" Tag="4"/>
                    <ComboBoxItem Content="Назначен к уборке" Tag="5"/>
                    <ComboBoxItem Content="Занятый" Tag="6"/>
                    <ComboBoxItem Content="Грязный" Tag="7"/>
                </ComboBox>


            </Grid>

            <!-- Панель с кнопками -->
            <StackPanel Grid.Row="11"
    Orientation="Horizontal"
    HorizontalAlignment="Center"
    VerticalAlignment="Bottom"
    Margin="0,0,0,10">

                <!-- Кнопка брони -->
                <Button Content="Применить" 
                    Click="Apply_Click" 
                    Width="150" 
                    Height="35"
                    Background="#FF03F41D" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="Bold"
                    Margin="0,0,10,0"/>

            </StackPanel>
            <!-- Индикатор загрузки -->
            <Grid x:Name="LoadingIndicator" Visibility="Hidden" Opacity="0" Grid.Row="4" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Canvas Width="200" Height="40">
                    <ProgressBar x:Name="ProgressLoader" Width="200" Height="20" Minimum="0" Maximum="100" Value="0">
                        <ProgressBar.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Value" From="0" To="100" Duration="0:0:3" RepeatBehavior="Forever" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ProgressBar.Triggers>
                    </ProgressBar>
                </Canvas>
                <TextBlock Name="TextLoading" Text="Loading..." Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom"
               Margin="5,15,5,5" FontWeight="Bold">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsVisible" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="Forever" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Grid>
    </Border>
</UserControl>
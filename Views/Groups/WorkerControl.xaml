<UserControl x:Class="HotelApp.Views.Groups.WorkerControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="950" Height="650">

    <!-- Тень вокруг окна -->
    <UserControl.Effect>
        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
    </UserControl.Effect>

    <Border CornerRadius="10">
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF222222" Offset="0" />
                    <GradientStop Color="#FF1E1E1E" Offset="0.5" />
                    <GradientStop Color="#FF1A1A1A" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Заголовок и кнопка закрытия -->
            <Grid Grid.Row="0" Background="Black" Height="30" VerticalAlignment="Top" MouseDown="DragWindow_MouseDown">
                <TextBlock Text="Панель работника" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0" Foreground="White" FontSize="16"/>
                <Button Content="X" Width="30" Height="30" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        FontSize="14"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Контейнер для разных панелей -->
            <ContentControl x:Name="WorkerPanelContainer" Margin="0,35,0,0"
                        />

            <Canvas x:Name="WindowContainer" Grid.RowSpan="4" />
        </Grid>
    </Border>
    </UserControl>
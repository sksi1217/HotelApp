<UserControl x:Class="HotelApp.Views.Groups.AdminControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="950" Height="650">
    <UserControl.Resources>
        <!-- Светлый стиль для кнопок -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFCACACA" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Основной контейнер с белым фоном и тенью -->
    <Border Background="White">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="0" />
        </Border.Effect>

        <Grid>
            <!-- Определение строк -->
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF222222" Offset="0" />
                    <GradientStop Color="#FF1E1E1E" Offset="0.5" />
                    <GradientStop Color="#FF1A1A1A" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Верхняя панель -->
            <Grid Grid.Row="0" Background="Black" VerticalAlignment="Top" MouseDown="DragWindow_MouseDown" Height="30">
                <TextBlock Text="Админ панель" Foreground="White" FontSize="14" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0" />
                <Button Content="X" Background="Transparent" Foreground="#333333" FontSize="14" 
                    HorizontalAlignment="Right" Width="30" Height="30" Click="CloseButton_Click" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="Transparent" BorderThickness="0" 
                                            CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFDDDDDD" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Панель с кнопками -->
            <WrapPanel Grid.Row="1" Background="#F5F5F5" Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Зарегистрировать пользователя" Click="Register_Click" Style="{StaticResource ButtonStyle}" MinWidth="160" Margin="2"/>
                <Button Content="Зарегистрировать работника" Click="RegisterWorker_Click" Style="{StaticResource ButtonStyle}" MinWidth="160" Margin="2"/>
                <Button Content="Указать цены на комнаты" Click="PriceRooms_Click" Style="{StaticResource ButtonStyle}" MinWidth="160" Margin="2"/>
                <Button Content="Показать всех сотрудников" Click="AllWorkers_Click" Style="{StaticResource ButtonStyle}" MinWidth="160" Margin="2"/>
                <Button Content="Показать всех клиентов" Click="AllUsers_Click" Style="{StaticResource ButtonStyle}" MinWidth="160" Margin="2"/>
                <Button Content="Показать комнаты" Click="AllRooms_Click" Style="{StaticResource ButtonStyle}" MinWidth="160" Margin="2"/>
            </WrapPanel>

            <!-- Таблица номеров -->
            <DataGrid x:Name="RoomsDataGrid" 
                  Visibility="Visible"
                  SelectionMode="Single"
                  ItemsSource="{Binding Rooms}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="False" 
                  Margin="0,10,0,0" 
                  Background="#FF2A2A2A" 
                  Foreground="White" 
                  BorderBrush="#FF444444" 
                  BorderThickness="1" Grid.RowSpan="2" Grid.Row="2">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF333333" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Padding" Value="10" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FF2A2A2A" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Height" Value="35" />
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <!-- Название комнаты - только для чтения -->
                    <DataGridTextColumn Header="Комната" Binding="{Binding NameRoom}" Width="*" IsReadOnly="True"/>

                    <!-- Цена - можно редактировать -->
                    <DataGridTextColumn Header="Цена" Binding="{Binding PriceRoom}" Width="*" IsReadOnly="True"/>

                    <DataGridTextColumn Header="Номер" Binding="{Binding NumberRoom}" Width="*" IsReadOnly="True"/>

                    <!-- Этаж комнаты - только для чтения -->
                    <DataGridTextColumn Header="Этаж" Binding="{Binding FloorRoom}" Width="*" IsReadOnly="True"/>


                    <DataGridTextColumn Header="Статус" Binding="{Binding StatusRoom}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Клиент" Binding="{Binding Client}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Почта" Binding="{Binding Email}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Кол-во гостей" Binding="{Binding GuestCount}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Таблица Пользователей -->
            <DataGrid x:Name="UserDataGrid" 
                  ItemsSource="{Binding Users}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Visibility="Collapsed"
                  Margin="0,10,0,0"
                  Background="#FF2A2A2A"
                  Foreground="White"
                  BorderBrush="#FF444444"
                  BorderThickness="1"
                  Grid.Row="2">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF333333"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FF2A2A2A"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Height" Value="35"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <!-- Поля класса User -->
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Cookie" Binding="{Binding Cookie}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Тип пользователя" Binding="{Binding TypeUser}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Работа" Binding="{Binding TypeWorkForWorker}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Таблица Работников -->
            <DataGrid x:Name="WorkersDataGrid" 
                  ItemsSource="{Binding Workers}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Visibility="Collapsed"
                  Margin="0,10,0,0"
                  Background="#FF2A2A2A"
                  Foreground="White"
                  BorderBrush="#FF444444"
                  BorderThickness="1"
                  Grid.Row="2">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF333333"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FF2A2A2A"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Height" Value="35"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <!-- Поля класса Worker -->
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Должность" Binding="{Binding TypeWorker}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <Canvas x:Name="WindowContainer" Grid.RowSpan="4" />
        </Grid>
    </Border>
</UserControl>

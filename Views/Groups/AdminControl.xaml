<UserControl x:Class="HotelApp.Views.Groups.AdminControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="950" Height="650">

    <UserControl.Resources>
        <!-- Стиль для кнопок панели управления -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF444444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF555555" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Основной фон с градиентом -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF222222" Offset="0" />
                <GradientStop Color="#FF1A1A1A" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <!-- Заголовок -->
            <RowDefinition Height="60" />
            <!-- Панель кнопок -->
            <RowDefinition Height="*" />
            <!-- Основной контент (таблицы) -->
            <RowDefinition Height="0" />
            <!-- Зарезервировано под будущее -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель с заголовком и крестиком -->
        <Grid Grid.Row="0" Background="#FF0F0F0F" MouseDown="DragWindow_MouseDown">
            <TextBlock Text="Админ панель"
                       Foreground="White"
                       FontSize="14"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0" />
            <Button Content="✕"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="CloseButton_Click"
                    Cursor="Hand"
                    Margin="0,0,10,0"
                    BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF444444" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Панель управления -->
        <WrapPanel Grid.Row="1" Margin="10,5" HorizontalAlignment="Center">
            <Button Content="Добавить пользователя" Click="Register_Click" Style="{StaticResource ControlButtonStyle}" MinWidth="160" />
            <Button Content="Добавить работника" Click="RegisterWorker_Click" Style="{StaticResource ControlButtonStyle}" MinWidth="160" />
            <Button Content="Добавить комнату" Click="AddRoomButton_Click" Style="{StaticResource ControlButtonStyle}" MinWidth="160" />
            <Button Content="Показать всех сотрудников" Click="AllWorkers_Click" Style="{StaticResource ControlButtonStyle}" MinWidth="160" />
            <Button Content="Показать всех клиентов" Click="AllUsers_Click" Style="{StaticResource ControlButtonStyle}" MinWidth="160" />
            <Button Content="Показать комнаты" Click="AllRooms_Click" Style="{StaticResource ControlButtonStyle}" MinWidth="160" />
            <Button Content="Указать цены на комнаты" Click="PriceRooms_Click" Style="{StaticResource ControlButtonStyle}" MinWidth="160" />
        </WrapPanel>

        <!-- Таблица номеров (по умолчанию видима) -->
        <DataGrid x:Name="RoomsDataGrid"
                  Grid.Row="2"
                  Visibility="Visible"
                  ItemsSource="{Binding Rooms}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#FF1E1E1E"
                  Foreground="White"
                  BorderBrush="#FF333333"
                  BorderThickness="1"
                  Margin="10,0,10,10"
                  RowHeight="35"
                  FontSize="13">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF2A2A2A" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Padding" Value="8,5" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#FF1E1E1E" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Комната" Binding="{Binding NameRoom}" Width="*" />
                <DataGridTextColumn Header="Цена (₽)" Binding="{Binding PriceRoom}" Width="80" />
                <DataGridTextColumn Header="Номер" Binding="{Binding NumberRoom}" Width="70" />
                <DataGridTextColumn Header="Этаж" Binding="{Binding FloorRoom}" Width="60" />
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusRoom}" Width="100" />
                <DataGridTextColumn Header="Клиент" Binding="{Binding Client}" Width="*" />
                <DataGridTextColumn Header="Почта" Binding="{Binding Email}" Width="*" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120" />
                <DataGridTextColumn Header="Гостей" Binding="{Binding GuestCount}" Width="60" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Таблица пользователей -->
        <DataGrid x:Name="UserDataGrid"
                  Grid.Row="2"
                  Visibility="Collapsed"
                  ItemsSource="{Binding Users}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#FF1E1E1E"
                  Foreground="White"
                  BorderBrush="#FF333333"
                  BorderThickness="1"
                  Margin="10,0,10,10"
                  RowHeight="35"
                  FontSize="13">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF2A2A2A" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Padding" Value="8,5" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#FF1E1E1E" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="*" />
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="*" />
                <DataGridTextColumn Header="Cookie" Binding="{Binding Cookie}" Width="*" />
                <DataGridTextColumn Header="Тип" Binding="{Binding TypeUser}" Width="100" />
                <DataGridTextColumn Header="Работа" Binding="{Binding TypeWorkForWorker}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Таблица работников -->
        <DataGrid x:Name="WorkersDataGrid"
                  Grid.Row="2"
                  Visibility="Collapsed"
                  ItemsSource="{Binding Workers}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#FF1E1E1E"
                  Foreground="White"
                  BorderBrush="#FF333333"
                  BorderThickness="1"
                  Margin="10,0,10,10"
                  RowHeight="35"
                  FontSize="13">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF2A2A2A" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Padding" Value="8,5" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#FF1E1E1E" />
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120" />
                <DataGridTextColumn Header="Должность" Binding="{Binding TypeWorker}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Контейнер для модальных окон -->
        <Canvas x:Name="WindowContainer" Grid.RowSpan="4" />
    </Grid>
</UserControl>
<UserControl x:Class="HotelApp.Views.Groups.GuestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="950" Height="650">

    <!-- Тень вокруг окна -->
    <UserControl.Effect>
        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
    </UserControl.Effect>

    <Border CornerRadius="10">
        <Grid>
            <!-- Разделение на строки -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="*"/>
                <!-- Список комнат -->
                <RowDefinition Height="Auto"/>
                <!-- Canvas для модального окна -->
            </Grid.RowDefinitions>

            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF222222" Offset="0" />
                    <GradientStop Color="#FF1E1E1E" Offset="0.5" />
                    <GradientStop Color="#FF1A1A1A" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Заголовок и кнопка закрытия -->
            <Grid Grid.Row="0" Background="Black" Height="30" VerticalAlignment="Top" MouseDown="DragWindow_MouseDown">
                <TextBlock Text="Панель гостя" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0" Foreground="White" FontSize="16"/>
                <Button Content="X" Width="30" Height="30" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        FontSize="14"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Список комнат -->
            <ScrollViewer Grid.Row="1" Margin="10" Background="#2C2C2C" BorderBrush="#444" BorderThickness="1">
                <ItemsControl x:Name="RoomsList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10" Background="#3A3A3A" CornerRadius="8" Padding="10"
                                    PreviewMouseDown="RoomItem_PreviewMouseDown">
                                <Grid Width="200">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Название -->
                                    <TextBlock Grid.Row="1" Text="{Binding NameRoom}" FontWeight="Bold" Foreground="White" Margin="0,5,0,0" />

                                    <!-- Описание -->
                                    <TextBlock Grid.Row="2" Text="{Binding DescriptionRoom}" Foreground="#CCCCCC" TextWrapping="Wrap" MaxHeight="60" />

                                    <!-- Цена -->
                                    <TextBlock Grid.Row="3" Text="{Binding PriceRoom, StringFormat={}{0} ₽}" Foreground="#7FFF00" Margin="0,5,0,0" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Контейнер для модальных окон -->
            <Canvas x:Name="WindowContainer" Grid.RowSpan="2" />
        </Grid>
    </Border>
</UserControl>
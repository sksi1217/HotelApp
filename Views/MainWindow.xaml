<Window x:Class="HotelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelApp.Views.Groups"
        mc:Ignorable="d"
        Title="GuestWindow" Height="700" Width="900" WindowStyle="None" ResizeMode="NoResize" Background="Transparent">

    <!-- Тень вокруг окна -->
    <Window.Effect>
        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
    </Window.Effect>

    <!-- Внешний Border для закруглений -->
    <Border CornerRadius="10" Background="#1E1E1E">
        <Grid>
            <!-- Определяем строки Grid -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="*"/>
                <!-- Основная область -->
            </Grid.RowDefinitions>

            <!-- Заголовок и кнопка закрытия -->
            <Grid Grid.Row="0" Background="Black" Height="30" VerticalAlignment="Top" MouseDown="DragWindow_MouseDown">
                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0" Foreground="White" FontSize="16"/>
                <Button Content="X" Width="30" Height="30" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        FontSize="14"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Используем DockPanel для разделения на левую и правую части -->
            <DockPanel Grid.Row="1" LastChildFill="True">

                <!-- Левая часть -->
                <StackPanel DockPanel.Dock="Left" Margin="10,10,0,10" Background="#333333">
                    <TextBlock Text="Функции пользователя" FontSize="14" FontWeight="Bold" Foreground="#FFFFFF" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <Button Content="Кнопка" Width="150" Height="30" FontSize="14" FontWeight="Bold"
                            Background="#0078D7" Foreground="White" Click="Panel_Click" Cursor="Hand" BorderThickness="0"/>
                </StackPanel>

                <!-- Правая часть -->
                <StackPanel DockPanel.Dock="Right" Margin="0,10,10,10" Background="#333333">
                    <Button Content="Вход" Width="150" Height="30" Margin="0,0,0,10" FontSize="14" FontWeight="Bold"
                            Background="#0078D7" Foreground="White" Click="ButtonLogin_Click" Cursor="Hand" BorderThickness="0"/>
                </StackPanel>

                <!-- Центральная область -->
                <Grid Background="#2A2A2A" Margin="10">
                    <TextBlock Text="Центральная область" FontSize="16" FontWeight="Bold" Foreground="#CCCCCC"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </DockPanel>

            <!-- Canvas поверх всего (если используется для модальных окон) -->
            <Canvas x:Name="WindowContainer" Grid.RowSpan="2" />
        </Grid>
    </Border>
</Window>
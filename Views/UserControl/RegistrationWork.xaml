<UserControl x:Class="HotelApp.Views.UserControl.RegistrationWork"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Width="400" Height="400">

    <!-- Тень вокруг окна -->
    <UserControl.Effect>
        <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
    </UserControl.Effect>

    <Border CornerRadius="10">
        
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF222222" Offset="0" />
                    <GradientStop Color="#FF1E1E1E" Offset="0.5" />
                    <GradientStop Color="#FF1A1A1A" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Заголовок и кнопка закрытия -->
            <Grid Grid.Row="0" Background="Black" Height="30" VerticalAlignment="Top" MouseDown="DragWindow_MouseDown">
                <TextBlock Text="Регистрация на работу" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0" Foreground="White" FontSize="16"/>
                <Button Content="X" Width="30" Height="30" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="White"
                    FontSize="14"
                    Click="CloseButton_Click"/>
            </Grid>

            <!-- Основной контент формы -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Grid.Row="1">

                <!-- Поле логина -->
                <Label Content="Имя" HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                <TextBox x:Name="FirstNameTextBox" Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

                <!-- Поле пароля -->
                <Label Content="Фамилия" HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                <TextBox x:Name="LastNameTextBox" Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>

                <!-- Поле пароля -->
                <Label Content="Номер телефона" HorizontalAlignment="Left" Foreground="White" FontSize="14"/>
                <TextBox x:Name="PhoneTextBox" Height="30" FontSize="14" Padding="5" Margin="0,0,0,10"/>
                
                <!-- Выбор типа пользователя -->
                <Label Content="Тип:" HorizontalAlignment="Left" Foreground="White" FontSize="14" />
                <ComboBox Height="30" x:Name="TypeWorkComboBox" Grid.Row="6" FontSize="14" Margin="0,0,0,10" Cursor="Hand">
                    <ComboBoxItem Width="330" Tag="0" Height="30" Content="Уборщик" />
                    <ComboBoxItem Width="330" Tag="1" Height="30" Content="Инженер" />
                    <ComboBoxItem Width="330" Tag="2" Height="30" Content="Консьерж" />
                    <ComboBoxItem Width="330" Tag="3" Height="30" Content="Бухгалтер" />
                </ComboBox>

                <!-- Кнопка -->
                <Button Content="Принять" Width="280" Height="35" Background="#0078D7" Foreground="White" 
            FontSize="14" FontWeight="Bold" Click="RegisterWorker_Click" Cursor="Hand"/>

            </StackPanel>

        </Grid>
    </Border>
</UserControl>
